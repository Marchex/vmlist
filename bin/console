#!/usr/bin/env ruby

require "bundler/setup"
require "../lib/mchx/vmlist/server"


obj = VmList::Server.new({'endpoint' =>  'https://api.opscode.com/organizations/marchex',
                         'client' => 'jciimarchex',
                         'key' => '/Users/jcarter/.chef/jciimarchex.pem'})
obj.get_config
obj.connect
obj.load_clients
obj.get_clients
obj.load_kvmhosts
obj.get_kvmhosts
obj.load_kvmguests
obj.get_kvmguests
obj.load_infrahosts
obj.get_infrahosts